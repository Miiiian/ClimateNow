<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>


<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.climatenow.SettingPageController">
   <children>
      <ImageView fitHeight="600.0" fitWidth="1000.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@settingBackground.png" />
         </image>
      </ImageView>
      <Button fx:id="changeUsernameButton" layoutX="200.0" layoutY="272.0" mnemonicParsing="false" onAction="#ClickChangeUsernameButton" prefHeight="71.0" prefWidth="204.0" style="-fx-background-color: #A482FF;" text="CHANGE USERNAME">
         <font>
            <Font name="Futura Medium" size="13.0" />
         </font>
      </Button>
      <Button fx:id="changePasswordButton" layoutX="582.0" layoutY="272.0" mnemonicParsing="false" onAction="#ClickChangePasswordButton" prefHeight="71.0" prefWidth="204.0" style="-fx-background-color: #A482FF;" text="CHANGE PASSWORD">
         <font>
            <Font name="Futura Medium" size="13.0" />
         </font>
      </Button>
      <Button fx:id="logoutButton" layoutX="388.0" layoutY="437.0" mnemonicParsing="false" onAction="#JumpOutYesAndNoWindow" prefHeight="71.0" prefWidth="204.0" style="-fx-background-color: #A482FF;" text="LOGOUT">
         <font>
            <Font name="Futura Medium" size="13.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
